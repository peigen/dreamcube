<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:lang="http://www.springframework.org/schema/lang"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
		http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-2.5.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd"
		default-autowire="byName">

	<!-- 图片校验码生成的工具 -->
	<bean id="wordImageProducer" class="com.dreamcube.core.common.tools.WordImageProducer" init-method="init"/>
	<bean id="picCodeGenerateTool" class="com.dreamcube.core.common.tools.PicCodeGenerateTool"/>
	
	
	<!-- MongoDB -->
	<bean id="mongo" class="com.mongodb.Mongo">
		<constructor-arg index="0" value="localhost" />
		<constructor-arg index="1" value="1983" />
	</bean>
	
	<bean id="mongoCache" class="com.dreamcube.core.common.service.impl.MongoCacheImpl" />
	
	<bean id="cacheService" class="com.dreamcube.core.common.service.impl.CacheServiceImpl" />
	
	<bean id="localCacheManage" class="com.dreamcube.core.common.service.impl.LocalCacheManageImpl" />
	
</beans>
